<div>
  <div>
    <h1>
      List of all roles
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new role
    </h2>

    <form action="/insert_role" method="post">
      <div>
        <label for="movie_id_box">
          Movie
        </label>

        <input type="text" id="movie_id_box" name="query_movie_id">
      </div>

      <div>
        <label for="actor_id_box">
          Actor
        </label>

        <input type="text" id="actor_id_box" name="query_actor_id">
      </div>

      <button>
        Create role
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Movie
        </th>

        <th>
          Actor
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_roles.each do |a_role| %>
      <tr>
        <td>
          <%= a_role.id %>
        </td>

        <td>
          <%= a_role.movie_id %>
        </td>

        <td>
          <%= a_role.actor_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_role.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_role.updated_at) %> ago
        </td>

        <td>
          <a href="/roles/<%= a_role.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
